<!DOCTYPE html>
<html>
  <head>
    <title>Reservations</title>
    <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css">
    <!-- Add Font Awesome CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
      body {
        font-family: Arial, sans-serif;
        background-image: linear-gradient(to left, #402cef,#b52de3);
        margin: 0;
        padding: 0;
      }

      .container {
        width: 80%;
        margin: 50px auto;
        
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        border-radius: 5px;
        padding: 30px;
      }
      nav {
            display: flex;
            padding: 10px;
            background-color: #2c3e50;
            color: white;
        }
        nav a {
            color: white;
            text-decoration: none;
            margin: 0 10px;
        }
        nav a:hover {
            text-decoration: underline;
        }

      h1 {
        text-align: center;
        margin-top: 0;
      }

      table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        color: white;
      }

      th, td {
        padding: 15px;
        text-align: left;
        border-bottom: 1px solid #ddd;
      }

      th {
        
        color: white;
      }

      

      .cancel-link {
        display: block;
        text-align: center;
        color: white;
        text-decoration: none;
        font-weight: bold;
        margin-top: 20px;
      }

      .cancel-link:hover {
        text-decoration: underline;
      }
      .search-bar {
            display: flex;
            justify-content: center;
            padding: 10px;
            background-color: #f8f9fa;
        }
        .search-bar input {
            padding: 10px;
            font-size: 16px;
            border: 1px solid #ccc;
            border-radius: 20px 0 0 20px; /* Add radius here */
            margin-right: -1px; /* Overlap the border-radius of the button */
        }
        .search-bar input:hover {
            border-color: #2c3e50;
        }
        .search-bar button {
            padding: 10px 15px;
            background-color: #2c3e50;
            border: none;
            border-radius: 0 20px 20px 0; /* Add radius here */
            cursor: pointer;
        }
        .search-bar button:hover {
            background-color: #1a252f;
        }
        .search-bar button i {
            color: white;
            font-size: 16px;
        }
    </style>
  </head>
  <body>
    <nav>
      <a href="/profile/<%= UID %>">my profile</a>
      <a href="/">Logout</a>
  </nav>
  <div style="background-image: linear-gradient(to left, #402cef,#b52de3);" class="search-bar">
      <form action="/searchreservation" method="get">
          <input type="text" name="query" placeholder="Search...">
          <button type="submit"><i class="fa fa-search"></i></button>
      </form>
  </div>
    <div class="container">
      <h1 style="color: white;">Reservations</h1>
      <table>
        <tr>
          <th>Check-in Date</th>
          <th>Check-out Date</th>
          <th>Total Cost</th>
          <th>Total Service Cost</th>
          <th>Room Cost</th>
          <th>Room ID</th>
          <th>Action</th>
        </tr>
        <% result.forEach(function(res) { %>
          <% if (res.state === 0) { %>
            <tr>
              <td><%= res.Checkindate %></td>
              <td><%= res.CheckoutDate %></td>
              <td><%= res.TotalCost %></td>
              <td><%= res.TSCost %></td>
              <td><%= res.RCost %></td>
              <td><%= res.RID %></td>
              <td><a href="/conres/<%= res.ID %>" class="cancel-link">Confirm</a></td>
            </tr>
          <% } else { %>
            <td><%= res.Checkindate %></td>
              <td><%= res.CheckoutDate %></td>
              <td><%= res.TotalCost %></td>
              <td><%= res.TSCost %></td>
              <td><%= res.RCost %></td>
              <td><%= res.RID %></td>
              <td>Reservation is confirmed</td>
            <% } %>
        <% }); %>
      </table>
    </div>
  </body>
</html>