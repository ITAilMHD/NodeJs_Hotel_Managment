<!DOCTYPE html>
<html>
  <head>
    <title>Reservations</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        background-image: linear-gradient(to left, #402cef,#b52de3);
        margin: 0;
        padding: 0;
      }

      .container {
        width: 80%;
        margin: 50px auto;
        
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        border-radius: 5px;
        padding: 30px;
      }

      h1 {
        text-align: center;
        margin-top: 0;
      }

      table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
      }

      th, td {
        padding: 15px;
        text-align: left;
        border-bottom: 1px solid #ddd;
      }

      th {
        
        color: white;
      }


      .cancel-link {
        display: block;
        text-align: center;
        color: white;
        text-decoration: none;
        font-weight: bold;
        margin-top: 20px;
      }

      .cancel-link:hover {
        text-decoration: underline;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1 style="color: white;">Reservations</h1>
      <table style="color: white;">
        <tr>
          <th>Check-in Date</th>
          <th>Check-out Date</th>
          <th>Total Cost</th>
          <th>Total Service Cost</th>
          <th>Room Cost</th>
          <th>Room ID</th>
          <th>Action</th>
        </tr>
        <% reservation.forEach(function(res) { %>
          <% if (res.state === 0) { %>
            <tr>
              <td><%= res.Checkindate %></td>
              <td><%= res.CheckoutDate %></td>
              <td><%= res.TotalCost %></td>
              <td><%= res.TSCost %></td>
              <td><%= res.RCost %></td>
              <td><%= res.RID %></td>
              <td><a href="/cancelres/<%= res.CID %>" class="cancel-link">Cancel</a></td>
            </tr>
          <% } else { %>
            <tr>
              <td><%= res.Checkindate %></td>
              <td><%= res.CheckoutDate %></td>
              <td><%= res.TotalCost %></td>
              <td><%= res.TSCost %></td>
              <td><%= res.RCost %></td>
              <td><%= res.RID %></td>
              <td>Reservation is confirmed</td>
            </tr>
            <% } %>
        <% }); %>
      </table>
    </div>
  </body>
</html>